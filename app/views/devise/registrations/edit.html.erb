<div class="row">   
<div class="col-md-3">
  <ul class="sidebar-list">
    <li class="sidebar-item"><%= link_to 'Modifier mon profil' , edit_user_registration_path , class:"sidebar-link active" %></li>
      
  </ul>
  <br>
  <%= link_to 'Voir mon profile' , user_path(current_user.id), class:"btn btn-default wide"%>
</div>
    <div class="col-md-7 text-center">            
        
   <div class="panel panel-default">
     <div class="panel-heading">Mon profil</div>
     <div class="panel-body">
       <div class="container">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render 'shared/devise_errors' %>
              <div class="form-group">
                       <%= f.text_field :fullname, autofocus: true, class: "form-control", placeholder: "Nom complet ( Prénom + Nom)" %>
              </div>
 <br/>
              <div class="form-group">
                  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Adresse e-mail" %>
              </div>
 <br/>
               <div class="row">
                 <div class="col-md-4">
                   <div class="form-group">
                     <span class="btn btn-default btn-file">
                       Choisir une photo
                 <%= f.file_field :avatar %>
                 </span>
               </div>
                 </div>
               </div>
<br/>
               <div class="form-group">
                 <%= f.text_field :phone_number , class: "form-control", placeholder:"Numéro de téléphone" %>
               </div>
<br/>
               <div class="form-group">
                 <%= f.text_area :description ,rows:5,col:25, class: "form-control", placeholder:"Une brève description" %>
               </div>
<br/>
              <div class="form-group">
                <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Nouveau mot de passe (si vous souhaitez changer de mot de passe)"  %>
              </div>
 <br/>
              <div class="form-group">
                 <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmation du mot de passe" %>
              </div>
 <br/>
              <div class="form-group">
                <br />
                <%= f.password_field :current_password, autocomplete: "off", class: "form-control", placeholder: "Mot de passe actuel (pour confirmer tout changement)" %>
              </div>
 <br/>
              <div class="actions">
    
                <%= f.submit "Enregistrer", class: "btn btn-primary" %>
 
              </div>
         <% end %>
       </div>
     </div>
   </div>
         
    </div>
</div>